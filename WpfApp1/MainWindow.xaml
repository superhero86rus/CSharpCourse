<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="btnClick" Content="Поприветствовать" HorizontalAlignment="Left" Margin="467,13,0,0" VerticalAlignment="Top" Width="118" Click="BtnClick_Click"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242" Text="Введите ваше имя!"/>
        <Label x:Name="labelResult" Content="Здесь будет приветствие!" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" RenderTransformOrigin="-3.855,-2.962" Width="242"/>
        <Button x:Name="btnClick1" Content="Click me!" HorizontalAlignment="Left" Margin="467,52,0,0" VerticalAlignment="Top" Width="118" Click="BtnClick1_Click"/>

    </Grid>
</Window>
